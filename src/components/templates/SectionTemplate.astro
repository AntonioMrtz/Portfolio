---
interface Props {
  title?: string;
  id?: string;
}

const { title, id } = Astro.props;
---

<section class="w-full" id={id}>
  {
    title && (
      <h2 class="text-2xl md:text-3xl 2xl:text-5xl font-bold mb-8 text-left text-(--secondary-purple-400)">
        {title}
      </h2>
    )
  }
  <div class="flex flex-col gap-6 w-full justify-center items-center">
    <slot />
  </div>
</section>
