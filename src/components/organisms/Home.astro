---
import {
  CONTACT_ID_TO_DATA,
  CV_DATA,
  PERSONAL_INFO,
  type Contact,
  type CvInfo,
} from "@/data/me";
import HomeCard from "../molecules/home-card/HomeCard.astro";

const email = CONTACT_ID_TO_DATA.email;
const linkedin = CONTACT_ID_TO_DATA.linkedin;
const github = CONTACT_ID_TO_DATA.github;
const cv = CV_DATA;

const HOME_CARDS: (Contact | CvInfo)[] = [email, linkedin, github, cv];
---

<div class="flex flex-col w-full min-h-screen justify-center gap-4">
  <!-- Text -->
  <div class="flex flex-col gap-2 sm:gap-6 mb-6 sm:mb-16">
    <h1
      class="text-3xl md:text-5xl 2xl:text-9xl text-center font-black gradient-text"
    >
      {PERSONAL_INFO.name}
    </h1>
    <div class="flex flex-col flex-wrap gap-1 items-center justify-center">
      {
        PERSONAL_INFO.title.map((line) => (
          <h2
            class="text-lg sm:text-2xl text-center 2xl:text-3xl font-black leading-tight gap-1"
            style="color: var(--secondary-purple-300);"
          >
            {`>> ${line}`}
          </h2>
        ))
      }
    </div>
  </div>

  <div
    class="flex flex-col md:flex-row gap-12 lg:gap-4 justify-between items-center md:p-[5%]"
  >
    <div
      class="flex flex-row w-full justify-center items-center relative mb-4 md:m-0"
    >
      <div
        class="aspect-square w-[40%] sm:w-[50%] 2xl:w-[65%] rotate-6 rounded-xl background-card"
      >
      </div>
      <div
        class="aspect-square w-[40%] sm:w-[50%] 2xl:w-[65%] rotate-3 rounded-xl background-card-secondary absolute"
      >
      </div>
      <img
        class="absolute w-[40%] sm:w-[50%] 2xl:w-[65%] h-auto rounded-lg profile-shadow"
        src={PERSONAL_INFO.profilePicturePath}
        alt={`${PERSONAL_INFO.name} profile picture`}
      />
    </div>
    <div class="grid grid-cols-2 gap-6 w-[65%] xl:p-[5%]">
      {
        HOME_CARDS.map((card) => (
          <HomeCard
            text={card.label}
            iconSrc={card.iconPath}
            url={card.url}
            copyUrl={"copyUrl" in card ? card.copyUrl : undefined}
          />
        ))
      }
    </div>
  </div>
</div>

<style>
  .gradient-text {
    background: linear-gradient(
      90deg,
      var(--accent-orange-500) 0%,
      var(--secondary-purple-400) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .profile-shadow {
    filter: drop-shadow(0 25px 25px rgba(0, 0, 0, 0.4))
      drop-shadow(0 10px 10px rgba(0, 0, 0, 0.3));
  }

  .background-card {
    background: linear-gradient(
      135deg,
      var(--accent-orange-500) 0%,
      color-mix(in srgb, var(--accent-orange-500) 80%, black) 100%
    );
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 10px 20px rgba(0, 0, 0, 0.2),
      inset 0 -2px 10px rgba(255, 255, 255, 0.1);
  }

  .background-card-secondary {
    background: linear-gradient(
      135deg,
      var(--profile-pic-background) 0%,
      color-mix(in srgb, var(--profile-pic-background) 80%, black) 100%
    );
    box-shadow:
      0 15px 30px rgba(0, 0, 0, 0.2),
      0 8px 15px rgba(0, 0, 0, 0.15);
  }
</style>
